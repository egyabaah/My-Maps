<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MyMaps" parent="Theme.Material3.DayNight">
        <!-- Primary color for the ActionBar -->
        <item name="colorPrimary">@color/primary_color</item>
        <!-- Primary variant color can be the same as primary or a different shade -->
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <!-- Setting ActionBar style -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Setting the status bar color -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <!-- Ensuring navigation bar color is also the same (optional) -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <!-- Back Arrow color       -->
        <item name="drawerArrowStyle">@style/backArrowTheme</item>
        <!-- SearchView Text       -->
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

    </style>

    <!-- Custom ActionBar style -->
    <style name="MyActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/primary_color</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Custom ActionBar title text style -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="backArrowTheme" parent="Base.Theme.MyMaps">
        <!-- your arrow color: -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- your app bar bgc: -->
        <item name="android:background">@color/white</item>
    </style>



    <!-- Search View Text   -->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:textColorHint">@color/my_hint_color</item>-->
    </style>

    <style name="Theme.MyMaps" parent="Base.Theme.MyMaps" />
</resources>